    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>com.controller.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/error404.jsp</location>
    </error-page>
</web-app>