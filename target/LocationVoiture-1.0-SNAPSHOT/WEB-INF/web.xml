        <servlet-class>com.controller.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Vehicle</servlet-name>
        <servlet-class>com.controller.VehicleServlet</servlet-class>
    </servlet>

