    </servlet-mapping>

    <servlet>
        <servlet-name>modifVehicule</servlet-name>
        <servlet-class>com.controller.ModifVehiculeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>modifVehicule</servlet-name>
        <url-pattern>/modifVehicle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>supVehicule</servlet-name>
        <servlet-class>com.controller.SupVehiculeServlet</servlet-class>
